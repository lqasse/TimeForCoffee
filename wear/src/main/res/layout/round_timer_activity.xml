<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/icons"
    android:id="@+id/timer_layout"
    android:keepScreenOn="true"
    android:gravity="center_horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timerfragment_count"
        android:textSize="50dp"
        android:textColor="@color/primary_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"
 />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timerfragment_next_timers"
        android:layout_below="@+id/timerfragment_description"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_horizontal"
        android:textSize="10dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/secondary_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timerfragment_title"
        android:text="title"
        android:layout_below="@+id/timerfragment_count"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_horizontal"
        android:textSize="30dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/primary_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timerfragment_description"
        android:text="description"
        android:layout_below="@+id/timerfragment_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/secondary_text" />
</RelativeLayout>